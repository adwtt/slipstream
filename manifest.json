{
  "manifest_version": 2,
  "name": "Slipstream",
  "description": "Too many streams? Problem solved.",
  "version": "0.0.1",
  "options_page": "options.html",
  "icons": {
    "128": "logo.png",
    "128": "logo.png",
    "128": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": { 
      "16": "logo.png",
      "48": "logo.png",
     "128": "logo.png" 
    },
    "default_title": "Loading streams...",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}